@model DPWD_SITE.Models.ViewModels.PromotionViewModel
@using System.Globalization;

<div class="row marquee-box" style="margin-bottom:20px">
    <div class="container">
        <div class="col-lg-2 text-blue text-right running-text" id="runningTextDate"></div>
        <div class="col-lg-10 running-text">
            <marquee id="runningText"></marquee>
        </div>
    </div>
</div>

<div class="container" style="background-color: lightgrey; margin-bottom:20px; border-radius:10px">
    <div class="row">
        <div class="col-lg-8 main-content">
            <div>
                <main class="container clear">
                    @for (int i = 0; i < Model.PromotionModelList.Count; i++)
                    {
                        <div class="row" style="margin-bottom:10px; margin-top:10px">
                            <div class="col-md-12">
                                <img src="@Url.Content("~/Resources/images/" + @Model.PromotionModelList[i].PromotionName + ".png")" style="width:100%"/>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <div class="panel panel-primary">
                                    <div class="panel-heading clickable">
                                        <div id="btnClose" class="text-center" style="background-color:white; position:absolute; right:20px; width:3%; cursor:pointer; z-index:9999999 !important">
                                            <label style="color:dodgerblue; margin:0; cursor:pointer">+</label>
                                        </div>
                                        <h3 class="panel-title">
                                            Lihat Detail
                                        </h3>
                                    </div>
                                    <div class="panel-body">
                                        @Html.Raw(@Model.PromotionModelList[i].PromotionDetails)
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </main>
            </div>
        </div>
        <div class="col-lg-4" style="padding:20px">
            <div class="col-lg-12" style="margin-bottom:20px;">
                <div class="col-lg-12" style="background-color: white; padding:10px">
