@model DPWD.Models.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>303 Admin</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Resources/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/Resources/css/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Resources/css/startmin.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Resources/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row text-center">
            <img style="max-width:500px; margin-top: 100px" src="~/Resources/images/logo-long-cropped.png" />
        </div>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                @if (Model.Message != null && Model.RequestStatus == "Success")
                {
                    <div class="alert alert-success" id="alert">
                        <button type="button" class="close" data-dismiss="alert-success">x</button>
                        <strong>@Model.RequestStatus! </strong>
                        @Model.Message
                    </div>
                }
                @if (Model.Message != null && Model.RequestStatus == "Error")
                {
                    <div class="alert alert-danger" id="alert">
                        <button type="button" class="close" data-dismiss="alert-error">x</button>
                        <strong>@Model.RequestStatus! </strong>
                        @Model.Message
                    </div>
                }
            </div>
            <div class="col-lg-3"></div>
        </div>
        <div class="row" style="min-width:483px;">
            <div class="col-md-4 col-md-offset-4" style="margin-top:-90px">
                <div class="login-panel panel panel-default" style="height:auto">
                    <div class="panel-heading">
                        <h3 class="panel-title">Forgot Password</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
    {
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.UserModel.Email, new { placeholder = "Email", @class = "form-control", type = "email" })
                    </div>
                    <div class="row" style="margin-bottom:15px">
                        <div class="col-lg-6 text-right">
                            <button id="back" class="btn" type="button" style="width:100%; margin-top: 10px;">
                                <a href="/Login/Index">Back</a>
                            </button>
                        </div>
                        <div class="col-lg-6 text-right">
                            <button id="login" class="btn btn-primary" type="submit" style="width:100%; margin-top: 10px;">
                                Reset
                            </button>
                        </div>
                    </div>
}
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- jQuery -->
    <script src="~/Resources/js/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Resources/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Resources/js/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Resources/js/startmin.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $(".alert").slideUp(500);
            }, 3000);
        });
    </script>
</body>
</html>
