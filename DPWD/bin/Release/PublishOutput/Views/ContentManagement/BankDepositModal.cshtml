@model DPWD.Models.BankDepositModel

@{
    string action;
    string buttonLabel;
    if (Model.Id != 0)
    {
        action = "EditBankDeposit";
        buttonLabel = "Edit";
    }
    else
    {
        action = "InsertBankDeposit";
        buttonLabel = "Add";
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm(action, "ContentManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Bank Deposit Form</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3">Bank Name</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.BankName, new { placeholder = "Bank Name", @class = "form-control", id = "addOrEditBankName" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Bank Details</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.BankDetails, new { placeholder = "Bank Details", @class = "form-control", id = "addOrEditBankDetails" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Status</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.DropDownListFor(model => model.Status, ViewBag.Status as SelectList, new { @class = "form-control", id = "addOrEditStatus" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Image Upload</div>
                    <div class="col-sm-9" style="height:54px">
                        <input type="file" name="file" accept=".png" class="form-control-file" id="inputFile" aria-describedby="fileHelp">
                        <small id="fileHelp" class="form-text text-muted">Accepts .png only</small><br />
                        <small id="fileHelp" class="form-text text-muted">Image size must be 100px x 50px</small>
                    </div>
                </div>
                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @style = "visibility:hidden;", id = "addOrEditId" })
            </div>
            <div class="modal-footer">
                <button id="cancelAddOrEdit" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">@buttonLabel</button>
            </div>
        }
    </div>
</div>
