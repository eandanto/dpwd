
@model DPWD.Models.UserModel
@{
    string action;
    string buttonLabel;
    if (Model.Id != 0)
    {
        action = "EditUser";
        buttonLabel = "Edit";
    }
    else
    {
        action = "AddUser";
        buttonLabel = "Add";
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm(action, "UserManagement", FormMethod.Post))
            {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add User</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3">Username</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.UserName, new { placeholder = "Username", @class = "form-control", id = "addUserName" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Email</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.Email, new { type = "email", placeholder = "Email", @class = "form-control", id = "addEmail" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Password</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.Password, new { placeholder = "Password", @class = "form-control", id = "addPassword", type = "password" })
                    </div>
                </div>
                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @style = "visibility:hidden;" })
            </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">@buttonLabel User</button>
                    </div>
        }
    </div>
</div>