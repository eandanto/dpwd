@model DPWD.Models.MemberModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Edit Member's Note</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("EditNotes", "Member", FormMethod.Post))
            {
                <div class="row" style="padding: 20px">
                    @Html.TextAreaFor(model => model.Notes, new { placeholder = "Notes", @class = "form-control", id = "addOrEditNotes" })
                </div>
                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @style = "visibility:hidden;", id = "memberId" })
            <div class="modal-footer">
                <button id="cancelAddOrEdit" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
            }
        </div>
    </div>
</div>