@model DPWD.Models.MemberModel
@{
    string action;
    string buttonLabel;
    if (Model.Id != 0)
    {
        action = "EditMember";
        buttonLabel = "Edit";
    }
    else
    {
        action = "AddMember";
        buttonLabel = "Add";
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm(action, "Member", FormMethod.Post))
            {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add Member</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3">Games</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.DropDownListFor(model => model.GameType, ViewBag.GameType as SelectList, new { @class = "form-control", id = "addOrEditGameType" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Username</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.UserName, new { placeholder = "Username", @class = "form-control", id = "addOrEditUserName", disabled = "disabled" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Bank</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.DropDownListFor(model => model.BankAccount, ViewBag.BankAccount as SelectList, new { @class = "form-control", id = "addOrEditBankAccount" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">No. Rek.</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.BankAccountNumber, new { placeholder = "No. Rek.", @class = "form-control", id = "addOrEditBankAccountNumber" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Nama Rek.</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.BankAccountName, new { placeholder = "Nama Rek.", @class = "form-control", id = "addOrEditBankAccountName" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Email</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.EmailAddress, new { placeholder = "Email", @class = "form-control", id = "addOrEditEmailAddress" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Phone</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone", @class = "form-control", id = "addOrEditPhoneNumber" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Notes</div>
                    <div class="col-sm-9">
                        @Html.TextAreaFor(model => model.Notes, new { placeholder = "Notes", @class = "form-control", id = "addOrEditNotes" })
                    </div>
                </div>
                @Html.TextBoxFor(model => model.Id, new {@class = "form-control", id = "addOrEditPhoneNumber", @style = "visibility:hidden;" })
            </div>
                <div class="modal-footer">
                    <button id="cancelAddOrEdit" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">@buttonLabel Member</button>
                </div>
        }
    </div>
</div>