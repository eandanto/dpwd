@model DPWD.Models.UserNameModel
@{
    string action;
    string buttonLabel;
    if (Model.Id != 0)
    {
        action = "EditUserName";
        buttonLabel = "Edit";
    }
    else
    {
        action = "AddUserName";
        buttonLabel = "Add";
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm(action, "Settings", FormMethod.Post))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add User Name</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3">User Name</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.TextBoxFor(model => model.UserName, new { placeholder = "User Name", @class = "form-control", id = "userName" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Game Type</div>
                    <div class="col-sm-9" style="height:54px">
                        @Html.DropDownListFor(model => model.GameType, ViewBag.GameType as SelectList, new { @class = "form-control" })
                    </div>
                </div>
                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @style = "visibility:hidden;" })
            </div>
            <div class="modal-footer">
                <button id="cancelAddOrEdit" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">@buttonLabel User Name</button>
            </div>
        }
    </div>
</div>